<div class="dark-background-container">
  
  <% flash.each do |key, value| %>
    <div class="row">
      <div class="medium-6 columns end">
        <div class="success callout" data-closable>
          <%= value %>
          <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-12 columns">
      <div class="heavy-container">
        <div class="heavy-title-container">
          <h2 class="heavy-title"><%= t('.titol') %></h2>
        </div>
        <div class="heavy-container-form">
          
            
            <div class="button-right-container">
              <%= link_to new_edifici_path, :class => "button button-right" do %>
                <%= t('.nou_edifici') %>
              <% end %>
            </div>
            
            <div class="row">
              <div class="medium-9 columns">
            
                <div class="projectes-existents-container">
                  <% if @edificis.count == 0 %>
                    <p><%= t('.no_projectes') %></p>
                  <% else %>
                    <div class="llistat-edificis">
                      <% @edificis.each do |edifici| %>
                        <div class="item-llistat-edificis">
                          <div class="imatge-item-llistat-edificis">
                            <%= link_to image_tag(edifici.identificacio.foto_facana.url(:thumb)), edit_identificacio_path(edifici.identificacio.id) %> 
                          </div>
                          <div class="text-item-llistat-edificis">
                            <%= link_to(edifici.nom_edifici, edit_identificacio_path(edifici.identificacio.id), :class => 'link-item-edifici') %>
                            <br>
                            <span class="data-llistat-edificis">(<%= edifici.created_at.day.to_s %>-<%= edifici.created_at.month.to_s %>-<%= edifici.created_at.year.to_s %>)</span>
                            <div class="boto-item-llistat-edificis button-right">
                              <%= link_to edifici, method: :delete, data: { confirm: t('.eliminar') } do %>
                                <i class="fa fa-trash" aria-hidden="true"></i>                 
                              <% end %>
                            </div>

                            <div class="boto-item-llistat-edificis button-right">
                              <%= link_to edit_edifici_path(edifici) do %>
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                              <% end %>
                            </div>
                          </div>
                          
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>    

      </div>
    </div>
  </div>

</div>
