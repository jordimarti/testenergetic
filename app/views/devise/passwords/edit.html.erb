<div class="dark-background-container">  

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="medium-6 columns">
      <div class="heavy-container">
        <div class="heavy-title-container">
          <h2 class="heavy-title"><%= t('.change_password_title') %></h2>
        </div>
        <div class="heavy-container-form">
          <%= f.error_notification %>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: t('.nova_contrasenya'), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: t('.confirma_nova_contrasenya'), required: true %>
          </div>

          <div class="form-actions clearfix">
            <%= f.button :submit, t('.change_password'), :class => 'button float-right' %>
          </div>
          
        </div>
      </div>
    </div>
    <div class="medium-4 medium-offset-1 columns end">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

</div>

