<div class="dark-background-container">
  <div class="row">
    <div class="medium-5 columns">
      <div class="heavy-container">
        <div class="heavy-title-container">
          <h2 class="heavy-title"><%= t('.login_title') %></h2>
        </div>
        <div class="heavy-container-form">    
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <% flash.each do |key, value| %>
					    <div class="alert alert-<%= key %>"><%= value %></div>
					  <% end %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
    					<%= f.input :password, required: true %>
    					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions clearfix">
              <%= f.button :submit, t('.login_button'), :class => 'button float-right' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-5 offset-2 columns">
      <p><%= t('.login_needed') %></p>
      <p><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>